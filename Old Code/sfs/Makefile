# Generated by PyMakeMake on 2013-04-06 17:35

# Project Setup
EXECNAME =	sfs
SRCDIR =	src
OBJDIR =	obj
BINDIR =	bin

# Compiler
CC =	gcc
CXX =	g++

# Compiler Flags
CFLAGS =	-ggdb -std=gnu99 -Wall -O2 -march=native -pipe
CXXFLAGS =	-ggdb -Wall -O2 -march=native -pipe

# Linker Flags
LDFLAGS =	-lm

############################################################
DEPS=$(OBJDIR)/sfs.o  $(OBJDIR)/main.o  

all: $(DEPS)
	$(CC) -o $(BINDIR)/$(EXECNAME) $(DEPS) $(LDFLAGS)

$(OBJDIR)/%.o: $(SRCDIR)/%.c
	$(CC) $(CFLAGS) -c -o $@ $<

$(OBJDIR)/%.o: $(SRCDIR)/%.cpp
	$(CXX) $(CXXFLAGS) -c -o $@ $<

clean:
	find $(OBJDIR) -name "*.o" -print0 | xargs -0 rm -rf

cleaner: clean
	rm -f $(BINDIR)/$(EXECNAME)
